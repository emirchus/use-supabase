{
  "compilerOptions": {
    // Output configuration
    "outDir": "dist",
    // Module and target configuration
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    // Compilation options
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    // Strict type checking
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    // Code quality checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    // JavaScript handling
    "allowJs": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "rollup.config.js"
  ]
}